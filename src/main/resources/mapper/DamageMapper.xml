<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ydh.dao.DamageDao">

    <select id="queryCount" parameterType="com.ydh.dto.DamageDto" resultType="java.lang.Integer">
        select count(1) from exec_damage
    </select>

    <select id="queryPage" parameterType="com.ydh.dto.DamageDto" resultType="com.ydh.dto.DamageDto">
        select id as id,damage_name as damageName,img_path as imgPath from exec_damage
        order by id ${postgreSQLQueryPage}
    </select>

    <select id="queryById" parameterType="java.lang.Integer" resultType="com.ydh.dto.DamageDto">
        select id as id,damage_name as damageName,img_path as imgPath from exec_damage where id=#{0}
    </select>

    <insert id="addDamage" useGeneratedKeys="true" keyProperty="id" parameterType="com.ydh.model.Damage">
        insert into exec_damage(damage_name,img_path) values(#{damageName},#{imgPath})
    </insert>

    <update id="modifyDamage" parameterType="com.ydh.model.Damage">
        update exec_damage set
        <if test="damageName != null">
            damage_name=#{damageName}
        </if>
        <if test="imgPath != null">
            img_path=#{imgPath}
        </if>
        where id=#{id}
    </update>

    <delete id="deleteDamage" parameterType="java.lang.Integer">
        delete from exec_damage where id=#{0}
    </delete>

    <delete id="deleteDamageDetailByPid" parameterType="java.lang.Integer">
        delete from exec_damage_detail where pid=#{0}
    </delete>

    <select id="queryDetailCount" parameterType="com.ydh.dto.DamageDetailDto" resultType="java.lang.Integer">
        select count(1) from exec_damage_detail where pid=#{pid}
    </select>

    <select id="queryDetailPage" parameterType="com.ydh.dto.DamageDetailDto" resultType="com.ydh.dto.DamageDetailDto">
        select id as id,damage_content as damageContent,pid as pid from exec_damage_detail where pid=#{pid}
        order by id ${postgreSQLQueryPage}
    </select>

    <select id="queryDetailById" parameterType="java.lang.Integer" resultType="com.ydh.dto.DamageDetailDto">
        select id as id,damage_content as damageContent,pid as pid from exec_damage_detail where id=#{0}
    </select>

    <insert id="addDamageDetail" useGeneratedKeys="true" keyProperty="id" parameterType="com.ydh.model.DamageDetail">
        insert into exec_damage_detail(damage_content,pid) values(#{damageContent},#{pid})
    </insert>

    <update id="modifyDamageDetail" parameterType="com.ydh.model.DamageDetail">
        update exec_damage_detail set damage_content=#{damageContent} where id=#{id}
    </update>

    <delete id="deleteDamageDetail" parameterType="java.lang.Integer">
        delete from exec_damage_detail where id=#{0}
    </delete>

    <select id="queryAllDamage" resultType="com.ydh.dto.DamageDto">
        select id as id,damage_name as damageName,img_path as imgPath from exec_damage order by id
    </select>

    <select id="queryAllDamageDetail" resultType="com.ydh.dto.DamageDetailDto">
        select id as id,damage_content as damageContent,pid as pid from exec_damage_detail order by id
    </select>
</mapper>